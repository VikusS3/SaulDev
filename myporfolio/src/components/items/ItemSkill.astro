---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="flex flex-row gap-4 justify-start items-center">
  <div
    class="p-3 rounded-full bg-zinc-800/75 grid place-content-center place-items-center"
  >
    <slot name="icon" />
  </div>
  <p class="text-white text-xl">
    {title}
  </p>
</div>
