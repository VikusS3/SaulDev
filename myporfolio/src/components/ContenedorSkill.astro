---
interface Props {
  class?: string;
  name: string;
}

const { name } = Astro.props;
---

<div
  class=` 
    ${Astro.props.class}
    bg-[#0c0c0d] border-2 border-zinc-800 
    rounded-xl p-5 flex flex-col justify-start items-center gap-4 w-[305px] 
    
    `
>
  <h3 class="text-3xl font-semibold text-white">{name}</h3>
  <div class="flex flex-col gap-y-4">
    <slot />
  </div>
</div>
