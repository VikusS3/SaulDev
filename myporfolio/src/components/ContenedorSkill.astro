---
interface Props{
    class?: string;
    name:string;
}

const {name} = Astro.props
---

<div class=` 
    ${Astro.props.class}
    bg-[#1f1f1f] rounded-lg p-5 flex flex-col justify-start items-center gap-4 max-w-[300px] h-[300px]
    hover:scale-105 transition-transform duration-300 ease-in-out hover:text-[#ffffff] hover:bg-[#2f2f2f]
    `>
    <h1 class="text-4xl font-semibold text-[#fcfcfc]">{name}</h1>
    <div class="flex flex-row justify-center items-center flex-wrap text-[#d6d6d6] gap-2">
        <slot />
    </div>
</div>