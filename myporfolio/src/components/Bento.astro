---

import { basics } from "@data";
import BentoItem from "./BentoItem.astro";


const {  proyecto4, proyecto5, proyecto6, proyecto7,proyecto8 } =
  basics;
---

<div class="grid grid-cols-2 grid-rows-3 place-content-center justify-center items-center gap-4">
