---
import Link from "../components/Icons/Link.astro";
import Github from "./Icons/Github.astro";
interface Props {
  class?: string;
  title: string;
  description: string;
  link: string;
  image: string;
  github?: string;
}

const { title, description, link, image, github } = Astro.props;
---

<article class=`${Astro.props.class} flex justify-center items-center`>
  <div class="relative w-full h-full my-shadow rounded-lg">
    <img src={image} alt={title} class="w-full block m-auto rounded-lg" />
    <div
      class="w-full h-full absolute bg-[rgba(0,0,0,0.6)] flex flex-col justify-center items-center opacity-0 transition-[0.6s] left-0 top-0 hover:opacity-100 ease-in-out duration-500 gap-10"
    >
      <div class="text-lg flex flex-col justify-center items-center">
        <h2 class="font-semibold">
          {title}
        </h2>
        <p class="text-center text-md text-text-200">
          {description}
        </p>
      </div>

      <div class="flex gap-10">
        <a role="link" target="_blank" aria-label="Ir al sitio web" href={link}>
          <Link />
        </a>
        <a
          role="link"
          target="_blank"
          aria-label="Ir al repositorio de Github"
          href={github}
        >
          <Github />
        </a>
      </div>
    </div>
  </div>
</article>

<style>
  .my-shadow {
    /*shadow efecto NEON casi blanco no tan grande*/
    -webkit-box-shadow: 0px 0px 11px 0px rgba(24, 26, 25, 0.92);
    -moz-box-shadow: 0px 0px 11px 0px rgba(24, 26, 25, 0.92);
    box-shadow: 0px 0px 11px 0px rgba(24, 26, 25, 0.92);
  }
</style>
