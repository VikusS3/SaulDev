---
interface Props {
  class?: string;
  name: string;
  img: string;
  href: string;
}

const { name, img, href } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class=`flex flex-col items-center ${Astro.props.class} gap-2`
>
  <img
    class="w-full h-auto rounded-xl"
    loading="lazy"
    src={img}
    alt=`Imagen del creador de contenido ${name}`
  />
  <h3 class="text-xl text-zinc-200">{name}</h3>
</a>
